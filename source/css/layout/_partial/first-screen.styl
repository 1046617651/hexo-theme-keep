$pc-font-size = 2rem;
$tablet-font-size = 1.8rem;

.first-screen-container {
  position: relative;
  box-sizing: border-box;
  width: 100%;
  overflow: hidden;
  background: url("/images/bg.svg") center center / cover no-repeat;

  .content {
    position: relative;
    padding: 30px;
    width: 80%;
    height: 80%;

    .description {
      font-weight: bold;
      font-size: $pc-font-size;
      line-height: 1.6;
      text-align: center;

      +keep-tablet() {
        font-size: $tablet-font-size;
      }
    }

    .s-icon-list {
      position: absolute;
      bottom: $component-interspace;
      font-size: $pc-font-size * 0.9;
      left: 50%;
      transform: translateX(-50%);

      +keep-tablet() {
        font-size: $tablet-font-size * 0.9;
      }

      .s-icon-item {
        float: left;
        margin-right: 25px;
        cursor: pointer;
        line-height: 1.6;

        &:last-child {
          margin-right: 0;
        }

      }

    }
  }
}
